<h1>New Advertisement</h1>
<div class="row">
    <%= form_for @advertisement do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
        </div>
        <div class="form-group">
            <%= f.label :price %>
            <%= f.text_area :price, class: 'form-control', placeholder: "Enter advertisement price" %>
        </div>
        <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control', placeholder: "Enter advertisement description" %>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
    <% end %>
</div>
